<div class="container-fluid">
    {{#if articles}}

        <div class="row">
            {{#each articles}}
                <div class="card m-auto" style="width: 18rem;">
                    <img src="{{imgSrc}}" class="card-img-top" alt="Article image from Free Code Camp">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">{{author}}</h6>
                        <p class="card-text">{{title}}</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal" data-title="{{title}}" data-articleid="{{id}}"><i class="fas fa-comments"> Comment</i></button>
                            <a href="{{link}}" class="btn btn-primary"><i class="fas fa-newspaper"> View Article</i></a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

    {{else}}

        {{> noarticles}}
        
    {{/if}}
</div>
{{> commentmodal}}